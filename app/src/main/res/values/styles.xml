<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoldTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorMaterialBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomButton2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_control_back</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomButtonTransparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorMaterialYellowA200</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomButtonGradient" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomButtonGradient2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_green_orange</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/colorMaterialBlack</item>
        <item name="android:textColorHint">@color/colorMaterialGray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
